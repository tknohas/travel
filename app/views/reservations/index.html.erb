<h1>予約済み一覧</h1>

<table>
	<thead>
		<tr>
			<th>施設名</th>
			<th>紹介文</th>
			<th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
		</tr>
	</thead>
	<tbody>
	<% @reservations.each do |reservation| %> 
		<% @rooms = Room.where(id: reservation.room_id) %>
			<% @rooms.each do |room| %>
				<tr>
					<td>	
						<%= link_to room_path(room) do %>
							<%= attachment_image_tag room, :room_image, fallback: "default.room.png", :size => '240x140' %>
						<% end %>
					</td>
					<td><%= link_to reservation.room.title, room_path(room)  %></td>
					<td><%= reservation.room.body %></td>
					<td><%= reservation.check_in %></td>
					<td><%= reservation.check_out %></td>
					<td><%= reservation.created_at.to_s(:datetime_jp) %></td>
				</tr>
		<% end %>
	<% end %>
	</tbody>
</table>