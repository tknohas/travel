<section class="section">
  	<div class="container">
      <h1 class="title">
        予約施設一覧
      </h1>
	</div>
</section>

<table class="table is-fullwidth">
	<thead>
		<tr>
		<th>施設画像</th>
			<th>施設名</th>
			<th>紹介文</th>
			<th>合計料金</th>
			<th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
		</tr>
	</thead>
	<tbody>
	<% @reservations.each do |reservation| %> 
		<% @rooms = Room.where(id: reservation.room_id) %>
			<% @rooms.each do |room| %>
				<tr>
					<td>	
						<%= link_to room_path(room) do %>
							<%= attachment_image_tag room, :room_image, fallback: "default.room.png", :size => '120x80' %>
						<% end %>
					</td>
					<td><%= link_to reservation.room.title, room_path(room)  %></td>
					<td><%= reservation.room.body %></td>
					<td><%= reservation.payment %>円</td>
					<td><%= reservation.check_in %></td>
					<td><%= reservation.check_out %></td>
					<td><%= reservation.created_at.to_s(:datetime_jp) %></td>
				</tr>
		<% end %>
	<% end %>
	</tbody>
</table>