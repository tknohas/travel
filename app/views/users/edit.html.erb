<h3>ユーザー編集</h3>

<%= form_with model: @user do |f| %>
	<table>
		<tr>
      <th><%= f.label :profile_image ,"アイコン画像" %></th>
      <td><%= f.file_field :profile_image %></td>
    </tr>
		<tr>
			<th><%= f.label :username ,"名前" %></th>
			<td><%= f.text_field :username %></td>
		</tr>
		<tr>
			<th><%= f.label :self_introduction ,"自己紹介" %></th>
			<td><%= f.text_area :self_introduction %></td>
	</table>
	<div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "キャンセル", user_path %></li>
    </ul>
  </div>
<% end %>