<div class="card">
  <header class="card-header font-weight-bold">
    <p class="card-header-title is-centered">
      ログイン
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input form-control", type:"text" %>
        </div>
      
        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"input form-control", type:"password" %>
        </div>
      
        <!-- <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %> -->
      
        <div class="actions">
          <%= f.submit "ログイン", class:"button is-success" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

