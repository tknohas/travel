<section class="section">
  	<div class="container">
      <h1 class="title">
        登録施設一覧
      </h1>
	</div>
</section>

<table class="table is-fullwidth">
	<thead>
		<tr>
			<th>画像</th>
			<th>施設名</th>
			<th>紹介文</th>
			<th>料金</th>
			<th>作成日</th>
		</tr>
	</thead>
	<tbody>
		<% @rooms.each do |room| %>  
			<% if room.user_id == current_user.id %>
				<tr class="mr-3">
					<td>
						<%= link_to room_path(room) do %>
						<%= attachment_image_tag room, :room_image, fallback: "default.room.png", :size => '120x80' %>
						<% end %>
					</td>
					<td><%= link_to room.title, room_path(room) %></td>
					<td><%= safe_join(room.body.split("\n"),tag(:br)) %></td>
					<td><%= room.price %>円</td>
					<td><%= room.created_at.strftime("%Y/%m/%d") %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
