<% @rooms.each do |room| %>
    <tr>
        <td>
            <%= link_to room_path(room) do %>
            <%= attachment_image_tag room, :room_image, fallback: "default.room.png", :size => '240x140' %>
            <% end %>
        </td>
        <td><%= link_to room.title, room_path(room) %></td>
        <td><%= safe_join(room.body.split("\n"),tag(:br)) %></td>
        <td><%= room.price %></td>
        <td><%= room.created_at %></td>
    </tr>
<% end %>